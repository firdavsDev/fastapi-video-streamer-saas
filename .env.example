# =================================
# üé¨ Video Streaming Backend Config
# =================================

# üåê Application Settings
APP_NAME="Video Streaming Service"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT="development"

# üîí Security Settings
SECRET_KEY="your-super-secret-key-change-this-in-production"
JWT_SECRET_KEY="your-jwt-secret-key-change-this-too"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=10080

# üìä Database Configuration
DATABASE_URL="sqlite:///./video_streaming.db"
# For PostgreSQL (production):
# DATABASE_URL="postgresql://user:password@localhost:5432/video_streaming"

# üîó API Configuration
API_V1_STR="/api/v1"
CORS_ORIGINS="http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000"

# üìÅ File Storage Settings
MAX_UPLOAD_SIZE=209715200  # 200MB in bytes
ALLOWED_VIDEO_EXTENSIONS=".mp4,.mov,.avi,.mkv,.webm"
UPLOAD_CHUNK_SIZE=8192  # 8KB chunks for streaming

# üóÑÔ∏è MinIO Configuration
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET_NAME="video-streaming"
MINIO_SECURE=false  # Set to true for HTTPS

# For AWS S3 (production):
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="your-s3-bucket-name"

# üîÑ Celery Configuration
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"
CELERY_TASK_SERIALIZER="json"
CELERY_RESULT_SERIALIZER="json"
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE="UTC"

# üöÄ Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_DB=0
REDIS_PASSWORD=""

# üìä Monitoring & Logging
LOG_LEVEL="INFO"
ENABLE_LOGGING=true
LOG_FILE="logs/video_streaming.log"

# üéØ Video Processing Settings
ENABLE_VIDEO_THUMBNAILS=true
THUMBNAIL_QUALITY=80
ENABLE_VIDEO_TRANSCODING=false
SUPPORTED_VIDEO_FORMATS=["mp4", "webm", "mov"]

# üîê Admin Authentication
ADMIN_USERNAME="admin"
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="admin123"  # Change this in production!

# üåê External Services
ENABLE_ANALYTICS=false
ANALYTICS_API_KEY=""

# üì± Frontend Settings
FRONTEND_URL="http://localhost:3000"
ENABLE_CORS=true

# üê≥ Docker Configuration
POSTGRES_DB="video_streaming"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_HOST="postgres"
POSTGRES_PORT="5432"

# üè• Health Check Settings
HEALTH_CHECK_INTERVAL=30
ENABLE_HEALTH_CHECKS=true

# üé• Video Streaming Settings
ENABLE_VIDEO_RESUME=true
DEFAULT_VIDEO_QUALITY="720p"
ENABLE_ADAPTIVE_STREAMING=false
STREAMING_CHUNK_SIZE=1048576  # 1MB

# üìà Performance Settings
MAX_CONCURRENT_UPLOADS=5
UPLOAD_TIMEOUT=300  # 5 minutes
STREAM_BUFFER_SIZE=8192
ENABLE_CACHING=true
CACHE_TTL=3600  # 1 hour

# üõ°Ô∏è Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # per minute

# üîç Search & Indexing
ENABLE_VIDEO_SEARCH=true
ELASTICSEARCH_URL="http://localhost:9200"

# üìß Email Settings (for notifications)
EMAIL_ENABLED=false
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_TLS=true

# üé® UI Customization
BRAND_NAME="Your Video Platform"
BRAND_LOGO_URL=""
CUSTOM_CSS_URL=""

# üîß Development Settings
AUTO_RELOAD=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=false